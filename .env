# ==========================================
# AI智能客服问答系统 - 环境配置文件
# ==========================================

# PostgreSQL数据库配置
POSTGRES_HOST=localhost              # 数据库主机地址
POSTGRES_PORT=5432                   # 数据库端口
POSTGRES_DB=ai_lemo_qa              # 数据库名称
POSTGRES_USER=lemo_user             # 数据库用户名
POSTGRES_PASSWORD=lemo_password_2024 # 数据库密码

# Redis缓存配置
REDIS_HOST=localhost                 # Redis主机地址
REDIS_PORT=6379                      # Redis端口
REDIS_PASSWORD=redis_password_2024   # Redis密码

# Milvus向量数据库配置
MILVUS_HOST=localhost                # Milvus主机地址
MILVUS_PORT=19530                    # Milvus端口

# Ollama大语言模型配置
OLLAMA_BASE_URL=http://localhost:11434  # Ollama服务地址
OLLAMA_MODEL=qwen3:8b                   # 对话模型（推荐：qwen3:8b）
OLLAMA_EMBEDDING_MODEL=nomic-embed-text # 向量化模型（768维）

# SearXNG搜索引擎配置
SEARXNG_URL=http://localhost:8888    # SearXNG服务地址
SEARXNG_TIMEOUT=10                   # 搜索超时时间（秒）
SEARXNG_MAX_RESULTS=3                # 返回搜索结果数量

# 业务逻辑配置
CONFIDENCE_THRESHOLD_WEB_SEARCH=0.2  # 网络搜索触发阈值（0-1，当知识库置信度低于此值时启用网络搜索）
                                     # 建议：0.1=极少触发，0.2=适中，0.3=频繁触发
